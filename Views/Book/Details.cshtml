@model Bookstore.Models.Book
@{
    ViewData["Title"] ="Detalhes do Livro";
    
    @* Get available quantity *@
    var Qtd = (Model.Qtd - Model.Borrowings.Where(b=>b.Returned == false).Count());
}


<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-0 mx-auto">
        <h3 class="my-6 text-2xl font-semibold text-gray-700 ">
            Detalhes do Livro @Model.Id
        </h3>

        <!-- TABELA  -->
        <div class="w-full p-3 overflow-hidden bg-white rounded-lg shadow-xs">
            
            <div class="border rounded p-2 py-3 text-dark mb-2">
                
                <div class="d-flex justify-content-center align-items-center py-3">
                    <div class="w-25 bg-red">
                        @if(Model.Cover == null){
                            <img src="~/img/book.png" alt="" style="width: 200px;height:300px" class="border rounded">
                        }else{
                            <img src="#" alt="" style="width: 200px;height:300px" class="border">
                        }
                        
                    </div>
                    <div class="w-50  text-dark mb-2">
                        <div class="row mb-2">
                            <div class="col-12 col-md-5">
                            <h6 style="font-weight: lighter;">Título: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;"><span > @Model.Title</span></h6>
                        </div>
                        <div class="col-12 col-md-3">
                            <h6 style="font-weight: lighter;">ISBN: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;">
                                <span > @Model.Isbn</span>
                            </h6>
                        </div>
                        <div class="col-12 col-md-4">
                            <h6 style="font-weight: lighter;">Autor: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;"><span > @Model.Autor</span></h6>
                        </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-12 col-md-5">
                            <h6 style="font-weight: lighter;">Categoria: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;"><span > @Model.Category.Name</span></h6>
                        </div>
                        <div class="col-12 col-md-3">
                            <h6 style="font-weight: lighter;">Ano: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;">
                                <span > @Model.Year</span>
                            </h6>
                        </div>
                        <div class="col-12 col-md-4">
                            <h6 style="font-weight: lighter;">Preço: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;"><span > @Model.Value</span></h6>
                        </div>
                        </div>
                        
                        <div class=" row text-dark mb-2">
                        
                        <div class="col-12 col-md-5">
                            <h6 style="font-weight: lighter;">Quantidade Total: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;"><span > @Model.Qtd</span></h6>
                        </div>
                        <div class="col-12 col-md-3">
                            <h6 style="font-weight: lighter;">Qtd Disponível: </h6>
                            <h6 class="text-dark fw-bold" style="font-weight: bolder;"><span > @Qtd</span></h6>
                        </div>
                    
                    </div>
                    </div>
                    

                </div>
                
                

            </div>

            

        </div>


    </div>
</main>