@model Bookstore.ViewModels.CreateViewModel
@{
    ViewData["Title"] ="Adicionar Utilizador";
}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-0 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 ">
            Adicionar Utilizador
        </h2>

        <!-- TABELA  -->
        <div class="w-full p-3 overflow-hidden bg-white rounded-lg shadow-xs">
            
        <form class="form" asp-action="Create" method="post" >
                    <div class="form-row">
                        <div class="form-group col-12 col-md-3 mr-5">
                            <label for="">Nome de Utilizador</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Nome de Utilizador">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group col-12 col-md-3 mr-5">
                            <label for="">Email</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email do Utilizador">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        
                                
                    </div>
                    <div class=" form-row mt-3">
                        <div class="form-group col-12 col-md-5">
                            <input type="submit" value="Adicionar" class="w-50 btn btn-md btn-primary">
                    
                        </div>
                    </div>
                </form>
           

        </div>


    </div>
</main>