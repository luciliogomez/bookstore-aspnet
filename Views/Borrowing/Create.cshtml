@model Bookstore.Models.Borrowing
@{
    ViewData["Title"] ="Emprestar Livro";
    var Book = ViewData["Book"] as Book;
    var Client = ViewData["Client"] as Client;
}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-0 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 ">
            Concluir Emprestimo
        </h2>

        <!-- TABELA  -->
        <div class="w-full p-3 overflow-hidden bg-white rounded-lg shadow-xs">
            
        <form class="form" asp-action="Create" method="post" >
                    <input type="hidden" name="ClientId" id="ClientId" value="@Client.Id">
                    <input type="hidden" name="BookId" id="BookId" value="@Book.Id">
                    <div class="form-row">
                        <div class="form-group col-12 col-md-3 mr-1">
                            <label for="">Livro</label>
                            <input type="text" value="@Book.Title" class="form-control" disabled>
                        </div>
                        
                        <div class="form-group col-12 col-md-3 mr-1">
                            <label for="">Cliente</label>
                            <input type="text" value="@Client.Name" class="form-control" disabled>
                        </div>
                        <div class="form-group col-12 col-md-3 mr-1">
                            <label for="">Valor</label>
                            <input type="text" value="@Book.Value" class="form-control" disabled>
                        </div>
                        <div class="form-group col-12 col-md-2 mr-2">
                            <label for="">Data de Devolução</label>
                            <input type="date" name="ReturnDate" id="ReturnDate" class="form-control" 
                                >
                            <span class="text-danger" asp-validation-for="ReturnDate"></span>
                        </div>
                                
                    </div>
                    <div class=" form-row mt-3">
                        <div class="form-group col-12 col-md-5">
                            <input type="submit" value="Concluir" class="w-50 btn btn-md btn-primary">
                    
                        </div>
                    </div>
                </form>
           

        </div>


    </div>
</main>