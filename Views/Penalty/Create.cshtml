@model Bookstore.Models.Penalty
@{
    ViewData["Title"] ="Aplicar Multa";
    var Borrowing = ViewData["Borrowing"] as Borrowing;
}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-0 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 ">
            Aplicar Multa
        </h2>

        <!-- TABELA  -->
        <div class="w-full p-3 overflow-hidden bg-white rounded-lg shadow-xs">
            
        <form class="form" asp-action="Create" method="post" >
                    <input type="hidden" name="BorrowingId" id="BorrowingId" value="@Borrowing.Id">
                    <div class="form-row">
                        <div class="form-group col-12 col-md-3 mr-1">
                            <label for="">Livro</label>
                            <input type="text" value="@Borrowing.Book.Title" class="form-control" disabled>
                        </div>
                        
                        <div class="form-group col-12 col-md-3 mr-1">
                            <label for="">Cliente</label>
                            <input type="text" value="@Borrowing.Client.Name" class="form-control" disabled>
                        </div>
                        <div class="form-group col-12 col-md-3 mr-1">
                            <label for="">Valor da Multa</label>
                            <input type="number" asp-for="Value" class="form-control" >
                        </div>
                                
                    </div>
                    <div class=" form-row mt-3">
                        <div class="form-group col-12 col-md-5">
                            <input type="submit" value="Concluir" class="w-50 btn btn-md btn-primary">
                    
                        </div>
                    </div>
                </form>
           

        </div>


    </div>
</main>